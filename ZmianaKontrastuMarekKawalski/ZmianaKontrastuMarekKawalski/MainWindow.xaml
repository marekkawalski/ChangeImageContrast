<Window x:Class="ChangeContrastMarekKawalski.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChangeContrastMarekKawalski"
        mc:Ignorable="d"
        Title="ZmianaKontrastuMarekKawalski"
        Height="664" Width="1040">

    <Grid HorizontalAlignment="Left" Width="1040" Cursor="Hand">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="520*" />
            <ColumnDefinition Width="520*" />
        </Grid.ColumnDefinitions>
        <Image x:Name="ChoosenImage" HorizontalAlignment="Center" Height="222" Margin="0,164,0,0" VerticalAlignment="Top" Width="382" Source="/startImage.jpg" StretchDirection="Both" Stretch="Uniform" />
        <Image x:Name="ConvertedImage" HorizontalAlignment="Center" Height="221" Margin="0,158,0,0" VerticalAlignment="Top" Width="410" Source="/startImage.jpg" StretchDirection="Both" Stretch="Uniform" Grid.Column="1" />
        <Button x:Name="ButtonChoosePhoto" Click="ButtonChoosePhoto_Click" Content="Choose photo" HorizontalAlignment="Left" Margin="167,396,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.514,-2.728" Height="55" Width="156" />
        <Button x:Name="ButtonSavePhoto" Click="ButtonSavePhoto_Click" Content="Save photo" HorizontalAlignment="Center" Margin="0,396,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.514,-2.728" Height="55" Width="156" Grid.Column="1" />
        <Slider x:Name="contrastSlider" HorizontalAlignment="Left" Margin="264,478,0,0" VerticalAlignment="Top" Width="512" Grid.ColumnSpan="2" Height="26" ValueChanged="ContrastSlider_ValueChanged" Maximum="255" Minimum="-255" />
        <CheckBox Content="Dark mode" Grid.Column="1" HorizontalAlignment="Left" Margin="236,26,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.01,-0.891" Height="21" Width="118" />
        <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="58,21,0,0" VerticalAlignment="Top" Width="148">
            <ComboBoxItem IsSelected="True">C#</ComboBoxItem>
            <ComboBoxItem >ASM</ComboBoxItem>
        </ComboBox>
        <Label Content="Toggle contrast" HorizontalAlignment="Left" Margin="470,433,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="100" />
        <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" />
        <CheckBox Content="Execution times" Grid.Column="1" HorizontalAlignment="Left" Margin="344,26,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.01,-0.891" Height="21" Width="118" />
        <TabControl Margin="301,478,10,7" Grid.Column="1">
            <TabItem Header="C#">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
            <TabItem Header="Asm">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="44*" />
                        <ColumnDefinition Width="159*" />
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>
        <Label Content="Original" HorizontalAlignment="Left" Margin="195,118,0,0" VerticalAlignment="Top" Width="100" />
        <Label Content="Converted" HorizontalAlignment="Center" Margin="0,118,0,0" VerticalAlignment="Top" Width="100" Grid.Column="1" />
        <Label Content="-255" HorizontalAlignment="Left" Margin="260,504,0,0" VerticalAlignment="Top" Cursor="" Width="35" />
        <Label Content="255" HorizontalAlignment="Left" Margin="228,504,0,0" VerticalAlignment="Top" Grid.Column="1" />
        <Label Content="0" HorizontalAlignment="Left" Margin="510,504,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.045,0.373" Grid.ColumnSpan="2" Width="22" />
        <Label Content="Times" Grid.Column="1" HorizontalAlignment="Left" Margin="385,460,0,0" VerticalAlignment="Top" />
        <Button Content="Reset" Grid.Column="1" HorizontalAlignment="Left" Margin="454,471,0,0" VerticalAlignment="Top" Width="44" />
    </Grid>
</Window>